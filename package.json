{
  "name": "project-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "scripts": {
    "dev": "npm run dev:backend",
    "dev:backend": "npm run -w @project/backend dev",
    "dev:frontend": "npm run -w @project/frontend dev",
    "build": "npm run build:shared && npm run build:backend && npm run build:frontend",
    "build:shared": "npm run -w @project/shared build",
    "build:backend": "npm run -w @project/backend build",
    "build:frontend": "npm run -w @project/frontend build",
    "test": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:unit": "vitest run",
    "test:integration": "npm run -w @project/backend test:integration",
    "test:e2e": "npm run -w @project/frontend test:e2e",
    "lint": "eslint . --ext .ts,.js",
    "typecheck": "npm run typecheck:shared && npm run typecheck:backend && npm run typecheck:frontend",
    "typecheck:shared": "tsc --project shared/tsconfig.json --noEmit",
    "typecheck:backend": "tsc --project backend/tsconfig.json --noEmit",
    "typecheck:frontend": "tsc --project frontend/tsconfig.json --noEmit",
    "format": "prettier --write \"**/*.{ts,js,json,md,css}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md,css}\"",
    "clean": "rm -rf **/dist **/node_modules",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.2.0",
    "typescript": "^5.4.0",
    "vitest": "^1.4.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=24.0.0"
  }
}
